<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Judge</title>
  <link href="../css/sb-admin-2.min.css" rel="stylesheet">
  <link href="../css/mdb.min.css" rel="stylesheet">
  <style>
    body {
      box-shadow: inset 0 0 0 100vw rgba(0, 0, 0, 0.5);
      background-image: url(/img/bg.jpg);
      background-position: center center;
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-size: cover;
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-4 mx-auto">
        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body">
            <div class="text-center">
              <h1 class="h4 text-gray-900 mb-4">Sign In</h1>
            </div>
            <% if (message.length > 0) { %>
            <div class="alert alert-danger col-sm-12 animated shake fast" align=center><%= message %></div>
            <% } %>
            <form class="user" method="POST" action="/login">
              <div class="form-group">
                <input type="text" class="form-control form-control-user" name="user_name" value="<%=username%>"
                  placeholder="Username">
              </div>
              <div class="form-group">
                <input type="password" class="form-control form-control-user" name="password" placeholder="Password">
              </div>
              <div class="form-group">
                <div class="form-check form-check-inline">
                  <input type="radio" class="form-check-input" id="materialInline1" name="role" checked value="Student">
                  <label class="form-check-label" for="materialInline1">Student</label>
                </div>
                <div class="form-check form-check-inline">
                  <input type="radio" class="form-check-input" id="materialInline2" name="role" value="Teacher">
                  <label class="form-check-label" for="materialInline2">Teacher</label>
                </div>
              </div>
              <button type="submit" class="btn btn-deep-orange btn-user btn-block">Login </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

</body>

</html>